{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Library",
  "version": "0.1.0",
  "identifier": "com.felipesantos.library",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Library - Reading Management",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "center": false,
        "resizable": true,
        "fullscreen": false,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Felipe Santos",
    "copyright": "Copyright Â© 2025 Felipe Santos",
    "category": "Utility",
    "shortDescription": "Personal reading management application",
    "longDescription": "Desktop app for managing reading books, sessions, notes, goals, and statistics"
  }
}

